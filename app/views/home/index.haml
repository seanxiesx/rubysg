.events.upcoming
  .container
    - @upcoming_events.each do |event|
      .event{"data-test" => "upcoming-event"}
        .name{"data-test" => "upcoming-event-name"}
          = event.name
        .details
          .time
            = event.time.strftime("%B %e - %-l:%M%P")
          .venue
            .venue_name= event.venue_name
            .venue_address= event.venue_address
          .rsvp
            = link_to "RSVP", event.event_url, "data-test" => "upcoming-event-rsvp-link"

.events.event-list
  .container
    - @historic_events.each do |event|
      .event{"data-test" => "historic-event"}
        .name{"data-test" => "historic-event-name"}
          = event.name
        .time
          = event.time.strftime("%-e %b %Y - %-l:%M%P")
        .venue
          = event.venue_name
        .details
          = link_to "Details & Slides", event.event_url, "data-test" => "historic-event-details-link"

.introduction
  .container
    .logo
      = image_tag "logo_icon_red.png"
      %h2.text-header
        What is RubySG?
    .what
      %p
        RubySG is Singapore's Ruby community, formed in 200x.
    .help
      %p
        You can find help from our #{link_to 'Google Group', 'https://groups.google.com/forum/?fromgroups#!forum/singapore-rb'} or #{link_to 'Facebook page', 'https://www.facebook.com/groups/singaporerubybrigade/'}.
