.container
  %h1= "Event List"
.container
  %h2= "Upcoming event(s)"
.events.event-list
  .container
    - @upcoming_events.each do |event|
      = render :partial => "shared/event_item", locals: {event: event, event_type: 'upcoming', link_name: "RSVP"}

.container
  %h2= "Past event(s)"
.events.event-list
  .container
    - @historic_events.each do |event|
      = render :partial => "shared/event_item", locals: {event: event, event_type: 'historic', link_name: "Details & Slides"}
