!!!
%html
  %head
    %title
      RubySG
    = favicon_link_tag       "favicon.png", type: "image/png"
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Droid+Sans:400,700"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .header
      .container
        .logo
          = link_to "RubySG", "/", class: "logo-image"
        .navigation
          %ul.page-links
            %li.page-link= link_to "Events"    , "#", class: "white"
            %li.page-link= link_to "Rubyists"  , "#", class: "white"
            %li.page-link= link_to "Resources" , "#", class: "white"
          %ul.social-media-links
            %li.social-media-link
              = link_to "Meetup"       , "http://www.meetup.com/Singapore-Ruby-Group/",
                target: "_blank", class: "social-media-icon meetup"
            %li.social-media-link
              = link_to "Google Group" , "https://groups.google.com/forum/?fromgroups#!forum/singapore-rb",
                target: "_blank", class: "social-media-icon google-group"
            %li.social-media-link
              = link_to "Facebook"     , "https://www.facebook.com/groups/singaporerubybrigade/",
                target: "_blank", class: "social-media-icon facebook"
            %li.social-media-link
              = link_to "Github"       , "https://github.com/rubysg/rubysg",
                target: "_blank", class: "social-media-icon github"

    .content
      = yield
